#reviewer-proposals-index
  %header.row
    .col-md-12
      %h2= event
  %header.row
    .col-md-12
      %aside#event_statistics
        %h3 Statistics
        %dl.dl-horizontal
          %dt Proposals Rated:
          %dd= event.proposals_rated_message
          %dt Unrated Proposals:
          %dd= event.proposals.unrated.count
  .row
    .col-md-10
      %small <em>Hint:</em> Hold <kbd>shift</kbd> and click sorting arrows to sort by multiple columns
    .col-md-2
      %button.btn.btn-primary.btn-sm.pull-right#sort_reset Reset Sort Order
  .row
    .col-md-12
      %table#reviewer-proposals.datatable.table.table-striped
        %thead
          %tr
            %th
            %th
            %th
            %th
            %th
            %th
            %th
            %th
            %th
            %th
          %tr
            %th Score
            %th Your<br/>Score
            %th Ratings
            %th Title
            %th Proposal<br/>Tags
            %th Reviewer<br/>Tags
            %th Comments
            %th Submitted On
            %th Updated At
            %th Rated?
        %tbody
          - proposals.each do |proposal|
            %tr
              %td= proposal.average_rating
              %td= proposal.score_for(current_user)
              %td= proposal.ratings.size
              %td= proposal.title_link
              %td= proposal.tags
              %td= proposal.review_tags
              %td= proposal.comment_count
              %td= proposal.created_at
              %td= proposal.updated_at
              %td= proposal.ratings.present?
